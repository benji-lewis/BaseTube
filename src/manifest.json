{
	"manifest_version": 3,
	"name": "BaseTube",
	"description": "Search YouTube with Base64-encoded queries",
	"version": "1.0",
	"permissions": ["activeTab"],
	"background": {
	  "service_worker": "background.js"
	},
	"action": {
	  "default_icon": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	  }
	},
	"icons": {
	  "16": "images/icon16.png",
	  "48": "images/icon48.png",
	  "128": "images/icon128.png"
	}
  }
  